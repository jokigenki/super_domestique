            <string>/// Check collisions
var w = sprite_get_width(sp_bird);

var colObject = instance_place(x + (w / 2), y + verticalSpeed, obj_ground);

if (colObject) {
    // vertical collision - road
    //while (!place_meeting(x, y + sign(verticalSpeed), obj_ground)) {
     //   y += sign(verticalSpeed);
    //}
    
    y = colObject.y;
    if (sign(verticalSpeed) == 1) {
        grounded = 1;
    }
    verticalSpeed = 0;
    if (colObject.potholeIndex &gt; 0) {
        show_debug_message("hit pothole!");
        obj_generator.blockMoveSpeed = obj_generator.blockMoveStartSpeed;
    }
} else {
    grounded = 0;
}

y += verticalSpeed;

// horizontal collision
if place_meeting(x + horizontalSpeed, y, obj_stop) {
    yp = 0;
    while (place_meeting(x + horizontalSpeed, y - yp, obj_stop) &amp;&amp; yp &lt;= abs(1 * horizontalSpeed)) {
        yp += 1;
    }
    if place_meeting(x + horizontalSpeed, y - yp, obj_stop) {
        while (!place_meeting(x + sign(horizontalSpeed), y, obj_stop)) {
            x += sign(horizontalSpeed);
        }
        horizontalSpeed = 0;
        dash = 2;
    } else {
        y -= yp;
    }
}
x += horizontalSpeed;
